<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.lemon.jcourse"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="cn.lemon.jcourse.base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- 图片剪切 -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AppCompat" />
        <!-- 相册图片选择 -->
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="cn.lemon.jcourse.module.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name="cn.lemon.jcourse.module.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.lemon.jcourse.module.java.JavaTextDetailActivity"
            android:label="课程详情" />
        <activity
            android:name="cn.lemon.jcourse.module.RegisterActivity"
            android:label="注册" />
        <activity
            android:name="cn.lemon.jcourse.module.LoginActivity"
            android:label="登录" />
        <activity
            android:name="cn.lemon.jcourse.module.account.UpdateInfoActivity"
            android:label="个人信息" />
        <activity
            android:name="cn.lemon.jcourse.module.java.StarJCourseListActivity"
            android:label="我的收藏" />
        <activity
            android:name="cn.lemon.jcourse.module.java.JavaCourseDirList"
            android:label="Java课程目录" />
        <activity android:name="cn.lemon.jcourse.module.java.JavaCourseUnitListActivity" />
    </application>

</manifest>